<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AgregarProductoController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #2d2d2d;" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#volverAtras" style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/arrow-left.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Label text="Detalles de Producto" textFill="WHITE" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>

      <ScrollPane fitToWidth="true" style="-fx-background: #1e1e1e; -fx-background-color: #1e1e1e;" VBox.vgrow="ALWAYS">
         <content>
            <VBox spacing="20.0" style="-fx-background-color: #1e1e1e;" maxWidth="800.0">
               <children>
                  <!-- Imagen del Producto -->
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <VBox alignment="CENTER" maxHeight="200.0" maxWidth="200.0" minHeight="150.0" minWidth="150.0" 
                              prefHeight="200.0" prefWidth="200.0"
                              style="-fx-border-color: #4a4a4a; -fx-border-style: dashed; -fx-border-width: 2; -fx-background-color: transparent;">
                           <children>
                              <ImageView fx:id="imageViewProducto" fitHeight="180.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" visible="false">
                              </ImageView>
                              <VBox fx:id="placeholderImagen" alignment="CENTER" spacing="10.0">
                                 <children>
                                    <ImageView fitHeight="40.0" fitWidth="40.0" opacity="0.6" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../icons/image-placeholder.png" />
                                       </image>
                                    </ImageView>
                                    <Label text="Agregue una Foto" textFill="#8a8a8a">
                                       <font>
                                          <Font size="12.0" />
                                       </font>
                                    </Label>
                                    <Label text="del Producto" textFill="#8a8a8a">
                                       <font>
                                          <Font size="12.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        <Button fx:id="btnSeleccionarImagen" mnemonicParsing="false" onAction="#seleccionarImagen" 
                                style="-fx-background-color: #4a4a4a; -fx-text-fill: white;" text="Seleccionar Imagen" 
                                prefWidth="200.0" maxWidth="300.0"/>
                     </children>
                  </VBox>

                  <!-- Formulario en GridPane para mejor control responsive -->
                  <GridPane hgap="15.0" vgap="15.0" maxWidth="Infinity">
                     <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                        <ColumnConstraints hgrow="NEVER" minWidth="0.0" prefWidth="0.0" />
                     </columnConstraints>
                     
                     <!-- Nombre -->
                     <Label text="Nombre:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="LEFT" GridPane.valignment="CENTER"/>
                     <TextField fx:id="txtNombre" promptText="Ingrese Nombre del Producto" 
                               style="-fx-background-color: #3a3a3a; -fx-text-fill: white; -fx-prompt-text-fill: #8a8a8a; -fx-border-color: #4a4a4a;" 
                               GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

                     <!-- Stock -->
                     <Label text="Stock:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="LEFT" GridPane.valignment="CENTER"/>
                     <TextField fx:id="txtStock" promptText="Ingrese Stock Inicial" 
                               style="-fx-background-color: #3a3a3a; -fx-text-fill: white; -fx-prompt-text-fill: #8a8a8a; -fx-border-color: #4a4a4a;" 
                               GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

                     <!-- Precio -->
                     <Label text="Precio:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="LEFT" GridPane.valignment="CENTER"/>
                     <TextField fx:id="txtPrecio" promptText="Ingrese Precio" 
                               style="-fx-background-color: #3a3a3a; -fx-text-fill: white; -fx-prompt-text-fill: #8a8a8a; -fx-border-color: #4a4a4a;" 
                               GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

                     <!-- ID (Solo lectura) -->
                     <Label text="ID:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="LEFT" GridPane.valignment="CENTER"/>
                     <TextField fx:id="txtId" editable="false" text="260220252"
                               style="-fx-background-color: #2a2a2a; -fx-text-fill: #8a8a8a; -fx-border-color: #4a4a4a;" 
                               GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

                     <!-- Medidas -->
                     <Label text="Medidas:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.halignment="LEFT" GridPane.valignment="CENTER"/>
                     <TextField fx:id="txtMedidas" promptText="Ingrese Medidas del Producto" 
                               style="-fx-background-color: #3a3a3a; -fx-text-fill: white; -fx-prompt-text-fill: #8a8a8a; -fx-border-color: #4a4a4a;" 
                               GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

                     <!-- Color -->
                     <Label text="Color:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.halignment="LEFT" GridPane.valignment="CENTER"/>
                     <TextField fx:id="txtColor" promptText="Ingrese Color del Producto" 
                               style="-fx-background-color: #3a3a3a; -fx-text-fill: white; -fx-prompt-text-fill: #8a8a8a; -fx-border-color: #4a4a4a;" 
                               GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

                     <!-- Sección (ComboBox) -->
                     <Label text="Sección:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.halignment="LEFT" GridPane.valignment="CENTER"/>
                     <ComboBox fx:id="cmbSeccion" promptText="Seleccione Sección" 
                              style="-fx-background-color: #3a3a3a;" maxWidth="Infinity"
                              GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.hgrow="ALWAYS"/>

                     <!-- Proveedor (ComboBox) con botón -->
                     <Label text="Proveedor:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.halignment="LEFT" GridPane.valignment="CENTER"/>
                     <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="7" GridPane.hgrow="ALWAYS">
                        <children>
                           <ComboBox fx:id="cmbProveedor" promptText="Seleccione Proveedor" 
                                    style="-fx-background-color: #3a3a3a;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                           <Button fx:id="btnAgregarProveedor" mnemonicParsing="false" onAction="#agregarProveedor" 
                                  style="-fx-background-color: #4a4a4a; -fx-text-fill: white;" text="Agregar Proveedor" 
                                  HBox.hgrow="NEVER" minWidth="120.0"/>
                        </children>
                     </HBox>
                  </GridPane>

                  <!-- Más detalles - Fuera del GridPane para ocupar todo el ancho -->
                  <VBox spacing="5.0" maxWidth="Infinity">
                     <children>
                        <Label text="Más detalles:" textFill="WHITE" />
                        <TextArea fx:id="txtDetalles" prefHeight="100.0" prefRowCount="4" 
                                 promptText="Agregue más características del Producto" 
                                 style="-fx-background-color: #3a3a3a; -fx-text-fill: white; -fx-prompt-text-fill: #8a8a8a; -fx-border-color: #4a4a4a;" 
                                 wrapText="true" maxWidth="Infinity" VBox.vgrow="NEVER"/>
                     </children>
                  </VBox>

                  <!-- Botón Guardar -->
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#guardarProducto" 
                               prefWidth="250.0" maxWidth="400.0" minWidth="200.0"
                               style="-fx-background-color: #5a5a5a; -fx-text-fill: white; -fx-font-weight: bold;" text="Guardar Nuevo Producto">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="30.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>