<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.InventarioController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" prefHeight="60.0" prefWidth="1160.0" spacing="20.0">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 24px; -fx-padding: 10px 15px; -fx-background-radius: 10px;" text="&lt;" />
            <Label text="Gestión de inventario" textFill="WHITE">
               <font>
                  <Font size="24.0" />
               </font></Label>
         </children>
      </HBox>
      
      <!-- Inventory Grid -->
      <ScrollPane fx:id="scrollPane" layoutX="20.0" layoutY="100.0" prefHeight="650.0" prefWidth="1160.0" style="-fx-background-color: #2a2a2a -fx-border-color: #2a2a2a">
         <content>
            <GridPane fx:id="inventoryGrid" hgap="20.0" style="-fx-background-color: transparent;" vgap="20.0">
               <padding>
                   <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               
               <!-- Productos del inventario se agregarán dinámicamente -->
               
            </GridPane>
         </content>
      </ScrollPane>
      
      <!-- Add New Product Button (Plus icon) -->
      <Button fx:id="addProductButton" layoutX="1100.0" layoutY="700.0" mnemonicParsing="false" onAction="#handleAddProduct" prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-background-radius: 30px;" text="+" />
   </children>
</AnchorPane>
