<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.InventarioController" style="-fx-background-color: #1a1a1a;">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #1a1a1a;" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 24px; -fx-padding: 10px 15px; -fx-background-radius: 10px;" text="&lt;" />
            <Label text="Gesti칩n de inventario" textFill="WHITE">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </HBox>
      
      <!-- Content Area - Ocupa todo el espacio restante -->
      <AnchorPane VBox.vgrow="ALWAYS" style="-fx-background-color: #1a1a1a;">
         <children>
            <!-- Inventory Grid ScrollPane - Ocupa todo el AnchorPane -->
            <ScrollPane fx:id="scrollPane" 
                       AnchorPane.topAnchor="0.0" 
                       AnchorPane.bottomAnchor="0.0" 
                       AnchorPane.leftAnchor="0.0" 
                       AnchorPane.rightAnchor="0.0"
                       fitToWidth="true" 
                       style="-fx-background: #1a1a1a; -fx-background-color: #1a1a1a; -fx-border-color: #1a1a1a;">
               <content>
                  <GridPane fx:id="inventoryGrid" 
                           hgap="20.0" 
                           vgap="20.0" 
                           style="-fx-background-color: #1a1a1a;">
                     <padding>
                         <Insets bottom="100.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     
                     <!-- Productos del inventario se agregar치n din치micamente -->
                     
                  </GridPane>
               </content>
            </ScrollPane>
            
            <!-- Add New Product Button (Plus icon) - Posici칩n fija en la esquina -->
            <Button fx:id="addProductButton" 
                   mnemonicParsing="false" 
                   onAction="#handleAddProduct" 
                   prefHeight="60.0" 
                   prefWidth="60.0" 
                   style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-background-radius: 30px;" 
                   text="+"
                   AnchorPane.bottomAnchor="20.0" 
                   AnchorPane.rightAnchor="20.0" />
         </children>
      </AnchorPane>
   </children>
</VBox>