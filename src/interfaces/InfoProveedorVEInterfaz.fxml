<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.InfoProveedorVEController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="15.0" style="-fx-background-color: #2c2c2c; -fx-background-radius: 15; -fx-border-radius: 15;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="Información del Proveedor" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            
            <VBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="Proveedor:" textFill="#CCCCCC">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblNombreProveedor" text="Nombre Proveedor" textFill="WHITE">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="Correo:" textFill="#CCCCCC">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblCorreoProveedor" text="correo@ejemplo.com" textFill="WHITE">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="Teléfono:" textFill="#CCCCCC">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblTelefonoProveedor" text="000 000 0000" textFill="WHITE">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <Button fx:id="btnCerrar" mnemonicParsing="false" onAction="#cerrarVentana" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-background-radius: 5;" text="Cerrar">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>